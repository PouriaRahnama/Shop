@page
@model Eshop.RazorPage.Pages.Profile.IndexModel
@using Eshop.RazorPage.Services.Users
@using Eshop.RazorPage.Infrastructure
@inject IUserService _user
@{
    var currentUser = await _user.GetCurrentUser();
}

<div class="row mb-5">
    <partial name="Shared/Profile/_ProfileSideBar" />
    <div class="col-lg-9 col-md-8">
        <div class="row mb-4">
            <div class="col-lg-12 mb-lg-0 mb-3">
                <div class="section-title mb-2">
                    اطلاعات شخصی
                </div>
                <section class="shadow-around p-3">
                    <div class="row">
                        <div class="col-lg-6 mb-4">
                            <div class="text-sm text-muted">نام و نام خانوادگی:</div>
                            <div class="text-dark font-weight-bold">@currentUser?.Name  @currentUser?.Family</div>
                        </div>
                        <div class="col-lg-6 mb-4">
                            <div class="text-sm text-muted">پست الکترونیک:</div>
                            <div class="text-dark font-weight-bold">@currentUser?.Email</div>
                        </div>
                        <div class="col-lg-6 mb-4">
                            <div class="text-sm text-muted">شماره تلفن همراه:</div>
                            <div class="text-dark font-weight-bold">@currentUser?.PhoneNumber</div>
                        </div>
                        <div class="col-12">
                            <div class="text-center">
                                <a href="/profile/edit" class="link--with-border-bottom">
                                    <i class="far fa-edit"></i>
                                    ویرایش اطلاعات شخصی
                                </a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

        </div>

    </div>
</div>
