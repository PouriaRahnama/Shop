@page
@model ErrorModel
@{
    ViewData["Title"] = "خطا";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="border rounded shadow p-5 bg-light">
                <h1 class="display-4 text-danger mb-3">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    خطای @Model.ErrorCode
                </h1>

                <p class="lead text-secondary">
                    @{
                        if (Model.ErrorCode == 404)
                        {
                            <text>صفحه مورد نظر پیدا نشد.</text>
                        }
                        else
                        {
                            <text>خطایی در سیستم رخ داده است.</text>
                        }
                    }
                </p>

                @if (Model.ShowRequestId)
                {
                    <div class="mt-4 text-muted small">
                        <strong>کد پیگیری:</strong> @Model.RequestId
                    </div>
                }

                <div class="mt-4">
                    <a class="btn btn-primary" href="/">بازگشت به صفحه اصلی</a>
                </div>
            </div>
        </div>
    </div>
</div>
